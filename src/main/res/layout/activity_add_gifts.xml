<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jluo80.amazinggifter.AddGiftsActivity"
    android:orientation="vertical" >

    <!-- App tool bar layout -->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/id_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true" />
    </android.support.design.widget.AppBarLayout>

    <!-- Row one -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/due_date"
            android:id="@+id/dueDateTextView"
            android:layout_gravity="center_vertical|right"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/dueDateEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:ems="10"
            android:inputType="date" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:contentDescription="@string/choose_date"
            android:cropToPadding="true"
            android:onClick="showDatePickerDialog"
            android:src="@drawable/ic_date_range_white_24dp" />
    </LinearLayout>

    <!-- Row two -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reason"
            android:id="@+id/reasonTextView"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_vertical|right" />

        <Spinner
            android:id="@+id/reason_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"/>
    </LinearLayout>


    <!-- Row three -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reason"
            android:id="@+id/giftTextView"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_vertical|right" />

        <Button
            android:id="@+id/amazonSearchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_from_amazon"
            android:layout_gravity="center_vertical|right" />
    </LinearLayout>
</LinearLayout>